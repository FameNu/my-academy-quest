<header>
  <h1 class="font-bold text-4xl">My Academy Quest</h1>
</header>

<main>
  <%= form_with class: "flex justify-between gap-4", model: @new_quest, url: quests_path do |form| %>
    <%= form.text_field :title, placeholder: "Enter quest title", class: "input" %>
    <%= form.submit "Create Quest", class: "btn btn-primary" %>
  <% end %>

  <% @quests.each do |quest| %>
    <div class="quest">
      <h2 class="font-bold text-2xl"><%= quest.title %></h2>
      <p>Completed: <%= quest.completed? ? "Yes" : "No" %></p>
    </div>
  <% end %>
</main>
